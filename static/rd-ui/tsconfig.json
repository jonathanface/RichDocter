{
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "target": "es6", // or later
    "lib": [
      "es6",
      "dom"
    ], // Include ES6 library
    "types": [
      "node",
      "vitest/globals"
    ], // Include Node.js types
    "module": "esnext", // Vite uses ESNext modules
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "src/types/*"
      ]
    }
  },
  "include": [
    "tsconfig.app.json",
    "tsconfig.node.json"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ]
}